{
  "compilerOptions": {
    // 指定 ECMAScript 目标版本，这里设置为最新版本
    "target": "ESNext",
    // 使用 define 来声明类字段，提高性能
    "useDefineForClassFields": true,
    // 指定生成哪个模块系统代码，这里使用 ES 模块
    "module": "ESNext",
    // 决定如何处理模块，这里使用 Node.js 风格的解析
    "moduleResolution": "Node",
    // *****启用所有严格类型检查选项*****
    "strict": true,
    // *****保留 JSX 语法，不进行转换*****
    "jsx": "preserve",
    // 生成相应的 .map 文件
    "sourceMap": true,
    // 允许导入 .json 文件
    "resolveJsonModule": true,
    // *****确保每个文件都可以安全地进行转译，而不依赖于其他导入*****
    "isolatedModules": true,
    // *****允许默认导入和导出与 CommonJS 模块的互操作性*****
    "esModuleInterop": true,
    // 指定要包含的库文件
    "lib": ["ESNext", "DOM"],
    // 跳过声明文件的类型检查
    "skipLibCheck": true,
    // *****包含 Vite 客户端类型*****
    "types": ["vite/client"]
  }
}